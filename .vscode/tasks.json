{
    // sudo apt install python3-colcon-clean
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Colcon: Build",
            "type": "shell",
            "linux": {
                "command": "colcon build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Colcon: Build [Symlink]",
            "type": "shell",
            "linux": {
                "command": "colcon build --symlink-install"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Colcon: Clean Build",
            "type": "shell",
            "linux": {
                "command": "colcon clean workspace -y"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "ROS: Create Package",
            "type": "shell",
            "linux": {
                "command": "ros2 pkg create ${input:ros_pkg} --dependencies ${input:ros_pkg_dep} --build-type ${input:ros_build} --license ${input:ros_pkg_lic} --maintainer-name bonnybk --maintainer-email bonnybabukachappilly@gmail.com"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/src"
            },
            "problemMatcher": []
        },
        // GROUP TASKS
        {
            "label": "Colcon: Clean & Build",
            "dependsOn": [
                "Colcon: Clean Build",
                "Colcon: Build",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Colcon: Clean & Build [Symlink]",
            "dependsOn": [
                "Colcon: Clean Build",
                "Colcon: Build [Symlink]",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Colcon: Clean, Create pkg & Build",
            "dependsOn": [
                "Colcon: Clean Build",
                "ROS: Create Package",
                "Colcon: Build",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Colcon: Clean, Create pkg & Build [Symlink]",
            "dependsOn": [
                "Colcon: Clean Build",
                "ROS: Create Package",
                "Colcon: Build [Symlink]",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        // RUNNING PROGRAMS
        {
            "label": "multi_map_nav: navigate_to_map_action_server",
            "type": "shell",
            "linux": {
                "command": "source ./install/setup.bash && ros2 run multi_map_nav navigate_to_map_action_server"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "multi_map_nav: target",
            "type": "shell",
            "linux": {
                "command": "source ./install/setup.bash && ros2 action send_goal /navigate_to_map multi_map_nav/action/NavigateToMap  \"{target_map: 'map1', target_pose: {header: {frame_id: 'map'}, pose: {position: {x: -2.0, y: 0.5, z: 0.0}, orientation: {w: 1.0}}}}\""
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "ros_build",
            "type": "promptString",
            "description": "ROS build type",
            "default": "ament_python"
            // ament_cmake ament_python
        },
        {
            "id": "ros_pkg",
            "type": "promptString",
            "description": "ROS package name"
        },
        {
            "id": "ros_pkg_dep",
            "type": "promptString",
            "description": "ROS package dependencies"
        },
        {
            "id": "ros_pkg_lic",
            "type": "promptString",
            "description": "ROS package license",
            "default": "GPL-3.0-only"
            // Apache-2.0, BSL-1.0, BSD-2.0, BSD-2-Clause,
            // BSD-3-Clause, GPL-3.0-only,
            // LGPL-3.0-only, MIT, MIT-0
        },
    ]
}